enum SalesRepStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum CommissionType {
  PIX_PAYIN    // Comissão sobre PIX recebido
  PIX_PAYOUT   // Comissão sobre PIX enviado
  USDT_PURCHASE // Comissão sobre compra de USDT
  USDT_INVESTMENT // Comissão sobre investimentos
}

// Representantes de vendas (time comercial)
model SalesRep {
  id                String              @id @default(cuid())
  name              String
  email             String              @unique
  phone             String?
  document          String?             // CPF do vendedor

  // Status e configurações
  status            SalesRepStatus      @default(ACTIVE)
  isActive          Boolean             @default(true)
  startDate         DateTime            @default(now())
  endDate           DateTime?           // Para quando sair da empresa

  // Informações de contato e perfil
  avatar            String?             // URL do avatar
  bio               String?             // Biografia/descrição
  territoryArea     String?             // Área de atuação (ex: "SP Capital", "Interior RJ")

  // Metas e performance
  monthlyTarget     Decimal?            @db.Decimal(15, 2) // Meta mensal em R$

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  // Relations
  assignedSellers   SellerAssignment[]  // Sellers atribuídos a este rep
  commissionRules   CommissionRule[]    // Regras de comissão específicas
  commissionEarnings CommissionEarning[] // Histórico de ganhos

  @@map("sales_reps")
}

// Atribuição de sellers para representantes
model SellerAssignment {
  id                String              @id @default(cuid())
  salesRepId        String
  sellerId          String              // User ID do seller

  // Configurações da atribuição
  isActive          Boolean             @default(true)
  assignedAt        DateTime            @default(now())
  unassignedAt      DateTime?

  // Observações
  notes             String?             // Notas sobre a atribuição

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  // Relations
  salesRep          SalesRep            @relation(fields: [salesRepId], references: [id], onDelete: Cascade)
  seller            User                @relation(fields: [sellerId], references: [id], onDelete: Cascade)

  @@unique([salesRepId, sellerId])
  @@map("seller_assignments")
}

// Regras de comissão personalizadas
model CommissionRule {
  id                String              @id @default(cuid())
  salesRepId        String

  // Tipo de transação e percentual
  transactionType   CommissionType
  percentage        Decimal             @db.Decimal(5, 4) // Ex: 0.0100 = 1%

  // Configurações avançadas
  isActive          Boolean             @default(true)
  minimumAmount     Decimal?            @db.Decimal(15, 2) // Valor mínimo para aplicar comissão
  maximumAmount     Decimal?            @db.Decimal(15, 2) // Valor máximo para aplicar comissão

  // Período de vigência
  validFrom         DateTime            @default(now())
  validUntil        DateTime?

  // Observações
  description       String?

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  // Relations
  salesRep          SalesRep            @relation(fields: [salesRepId], references: [id], onDelete: Cascade)

  @@map("commission_rules")
}

// Histórico de comissões ganhas
model CommissionEarning {
  id                String              @id @default(cuid())
  salesRepId        String
  sellerId          String              // Qual seller gerou a comissão

  // Detalhes da transação
  transactionType   CommissionType
  transactionId     String?             // ID da transação original
  transactionAmount Decimal             @db.Decimal(15, 2) // Valor da transação

  // Comissão calculada
  commissionRate    Decimal             @db.Decimal(5, 4) // Taxa aplicada
  commissionAmount  Decimal             @db.Decimal(15, 2) // Valor da comissão

  // Status do pagamento
  isPaid            Boolean             @default(false)
  paidAt            DateTime?
  paidBy            String?             // ID do admin que pagou
  paymentMethod     String?             // PIX, Transferência, etc
  paymentReference  String?             // Referência do pagamento

  // Observações
  notes             String?

  // Data da transação que gerou a comissão
  transactionDate   DateTime
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  // Relations
  salesRep          SalesRep            @relation(fields: [salesRepId], references: [id], onDelete: Cascade)
  seller            User                @relation("SellerCommissions", fields: [sellerId], references: [id], onDelete: Cascade)

  @@map("commission_earnings")
}

